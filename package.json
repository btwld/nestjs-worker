{
  "name": "nestjs-worker",
  "version": "0.1.0-dev.1",
  "description": "A powerful NestJS library for seamless worker_threads integration with decorators and dependency injection",
  "author": "Bitwild <contact@bitwild.com>",
  "license": "BSD-3-Clause",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md",
    "logo.svg"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bitwild/nestjs-worker.git"
  },
  "homepage": "https://github.com/bitwild/nestjs-worker#readme",
  "bugs": {
    "url": "https://github.com/bitwild/nestjs-worker/issues"
  },
  "keywords": [
    "nestjs",
    "worker",
    "worker-threads",
    "typescript",
    "nodejs",
    "cpu-intensive",
    "parallel-processing",
    "decorators",
    "dependency-injection"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm run build:lib",
    "build:lib": "tsc",
    "build:clean": "rm -rf dist && pnpm run build:lib",
    "prepublishOnly": "pnpm run build:clean && pnpm run test && pnpm run lint",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "example:basic": "cd examples/basic-usage && npm run start",
    "example:advanced": "cd examples/advanced-features && npm run start",
    "docs:build": "typedoc lib --out docs/api",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "jest": "^29.5.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "semantic-release": "^24.2.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.9.2"
  }
}
