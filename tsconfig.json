{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ESNext"],
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["jest", "node"],
    "stripInternal": true,
    "declarationMap": false
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
